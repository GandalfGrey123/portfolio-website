<div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
      <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="d-block text-gray-dark"> 
          <h5> 
              <a href="#" data-toggle="modal" data-target="#projectModal<%=project.id%>"> 
              <%= project.title %>     

              </a>
          </h5>
        </strong>                        
      </div>
  <span class="d-block"> <%= project.description %></span>                    
</div> 




<div class="modal-bg-custom modal fade " tabindex="-1" role="dialog" aria-labelledby="projectModal<%=project.id%>" aria-hidden="true" id="projectModal<%=project.id%>">

  <div class="modal-dialog modal-dialog-centered modal-lg " role="document">
    <div class="project-modal modal-content">

     
      <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-label=  "Close">
          <span aria-hidden="true"> &times;</span>
       </button>
     </div>      

        <h1 class="text-center p-5">
        <%=project.title%>
        </h1>


        <hr class="w-100">
     <div class="modal-body">
        <div class="media">
        <div class="media-body">  

        <div class ="row">    
        

          <div class="col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12 ">
          <h3 class="text-center"> Technology Stack</h3>
          <div class="list-group list-group-flush text-center mb-5 shadow">
          <% project.tags.each do |next_tag|%>

            <% if next_tag.resourceLink == '#'%>
             <a href="<%= next_tag.resourceLink %>" class="list-group-item list-group-item-action disabled">
                <h4><%= next_tag.tagName %></h4> 
             </a>
            <%else%>
             <a href="<%= next_tag.resourceLink %>" target="_blank" class="list-group-item list-group-item-action">
                <h4><%= next_tag.tagName %></h4> 
             </a>
            <% end %>
          <% end %>



        </div>
        <h3 class="text-bold text-center"> Contributors</h3>
        <div class="card text-center shadow p-5">          
          <ul class="text-left">
          <% project.contributors.each do |next_contributor|%>
          <li> <h5><%= next_contributor.contributorName %></h5></li>                
          <% end %>  

        </ul>
        </div>

         </div>
          

           <div class="col-lg-8 col-xl-8 col-md-8 col-sm-12 col-xs-12 mt-4">             

            <div class="card w-100 text-center p-5">
              


              <div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object icon-size" src=" https://cdn3.iconfinder.com/data/icons/faticons/32/picture-01-512.png" alt="...">
    </a>
  </div>
  <div class="media-body">
    <h1>Image Coming Soon ..</h1>
  </div>
</div>

            </div>


           


            <br> 
            <div class="p-3 card">
            <h3> Project Summary:</h3>
            
            <p>
              <%= project.designSummary %>
            </p>

              
              <% if project.links.length != 0 %>
                <h3> Project Links: </h3>
                <% end %>

              <% project.links.each do |next_link|%>
              <div class="p-2">
                <li>
                

                <a href="<%= next_link.linkUrl %>" class="project-link"> <%= next_link.linkName %> </a>
                
              </li>
              </div>
              <% end %>
           </div>
          </div>          
        </div>


        </div>
        </div>
     </div>

      <div class="modal-footer">      
        <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label=  "Close">
        Close
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

    </div>
  </div>
</div>
