   <script>
    var activeNavButton = "buttonProjects";

    var buttonProjects = document.getElementById("buttonProjects");
    buttonProjects.addEventListener("click",() =>{
      document.getElementById(activeNavButton).classList.remove('active');
      activeNavButton = "buttonProjects";
      buttonProjects.classList.add('active');

       document.getElementById("projectSection").scrollIntoView();
       let y = window.scrollY
       window.scroll({
          top: y-100,
          behavior: 'smooth'
        });

    });

    var buttonProfile = document.getElementById("buttonProfile");
    buttonProfile.addEventListener("click",() =>{
       document.getElementById(activeNavButton).classList.remove('active');
       activeNavButton = "buttonProfile";
       buttonProfile.classList.add('active');

       document.getElementById("profileSection").scrollIntoView();
       let y = window.scrollY
       window.scroll({
          top: y-100,
          behavior: 'smooth'
        });
    });

    var buttonContact = document.getElementById("buttonContact");
